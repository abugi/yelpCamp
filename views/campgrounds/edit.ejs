<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="text-align: center; margin-bottom: 30px;">
            <h1>Edit <%= camps.name %></h1>
        </div>
        <div  style="width: 30%; margin: 0 auto;" >
            <form action="/campgrounds/<%= camps._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= camps.name %>" name="camps[name]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= camps.image %>" name="camps[image]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= camps.description%>" name="camps[description]">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-sm btn-primary btn-block">
                </div>
            </form>
            <p><a href="/campgrounds">Go Back</a></p>
        </div>
    </div>   
</div>

<% include ../partials/footer %>