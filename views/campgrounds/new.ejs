<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="text-align: center; margin-bottom: 30px;">
            <h1>Create a new Campground</h1>
        </div>
        <div  style="width: 30%; margin: 0 auto;" >
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="campground name" name="name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="description" name="description">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-primary btn-block">
                </div>
            </form>
            <p><a href="/campgrounds">Go Back</a></p>
        </div>
    </div>   
</div>

<% include ../partials/footer %>