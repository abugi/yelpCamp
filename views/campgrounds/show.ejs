<% include ../partials/header%>

<div class="container">
     <div class="row">
          <div class="col-md-3">
               <p class="lead">YelpCamp</p>
               <div class="list-group">
                    <li class="list-group-item active">info 1</li>
                    <li class="list-group-item">info 2</li>
                    <li class="list-group-item">info 3</li>
               </div>
          </div>
          <div class="col-md-9">
               <div class="thumbnail">
                    <!-- <img class="img-responsive" src="<%= camps.image %>"> -->
                    <div class="caption-full">
                         <h4 class="pull-right">$9.00/night</h4>
                         <h4><a><%= camps.name %></a></h4>
                         <p><img src="<%= camps.image %>"></p>
                         <p>
                              <%= camps.description %>
                         </p>
                         <p><em>submitted by: <%= camps.author.username %></em></p>
                         <% if(currentUser && camps.author.id.equals(currentUser._id)){ %>
                              <a class="btn btn-xs btn-warning "href="/campgrounds/<%= camps._id %>/edit">Edit</a>
                              <form id="delete-form" action="/campgrounds/<%= camps._id %>?_method=DELETE" method="POST">
                                   <button class="btn btn-xs btn-danger">Delete</button>
                              </form>
                         <% } %>
                    </div>
               </div>
               <div class="well">
                    <div class="text-right">
               <a class="btn btn-success" href="/campgrounds/<%=camps._id%>/comments/new">add a comment</a>
                    </div>
                    <hr>
                    <% camps.comments.forEach(function(comment){ %>
                    <div class="row">
                         <div class="col-md-12">
                              <strong><%= comment.author.username %></strong>
                              <span class="pull-right">10 days ago</span>
                              <p><%= comment.text %></p>
                              <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                              <a class="btn btn-xs btn-warning" href="/campgrounds/<%=camps._id %>/comments/<%= comment._id %>/edit">Edit</a>
                              <form id="delete-form" action="/campgrounds/<%= camps._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                   <input class="btn btn-xs btn-danger" type="submit" value="Delete">
                              </form>
                              <% } %>
                              <hr>
                         </div>
                    </div>
                    <% }) %>
               </div>
          </div>
     </div>
</div>

<% include ../partials/footer%>